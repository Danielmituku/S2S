<body>
    <section class="register-photo">
        <div class="form-container">
            <div class="image-holder"></div>
            <form action="/signup"  method="post">
                <h2 class="text-center"><strong>Create</strong> an account.</h2>
                <div class="mb-3"><input class="form-control" type="username" name="name" placeholder="Enter your full name"></div>
                <div class="mb-3"><input class="form-control" type="email" name="email" placeholder="Email"></div>
                <div class="mb-3"><input class="form-control" type="password" name="password" placeholder="Password"></div>
                <div class="mb-3"><input class="form-control" type="password" name="passwordConfirm" placeholder="Password (repeat)"></div>
                <div class="mb-3">
                    <div class="form-check"><label class="form-check-label"><input class="form-check-input" type="checkbox">I agree to the license terms.</label></div>
                </div>

                <div class="mb-3">
                   <button class="btn btn-primary d-block w-100" type="submit" style="background: linear-gradient(-132deg, #DE6767, #7F67DE);">Sign Up Student</button>
                   <a class="btn btn-primary d-block w-100" href="/reg" type="submit" style="background: linear-gradient(-132deg, #DE6767, #7F67DE);">Sign Up Tutor</a>

                </div>
                <a class="already" href="/logins" style="color: var(--bs-blue);">You already have an account? Login here.</a>
            </form>
        </div>
    </section>
</body>
